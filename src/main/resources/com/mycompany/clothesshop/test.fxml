            <PasswordField fx:id="passwordField" layoutX="350.0" layoutY="145.0" prefHeight="25.0" prefWidth="169.0">
               <font>
                  <Font name="Times New Roman" size="14.0" />
               </font></PasswordField>
            <Label layoutX="87.0" layoutY="79.0" text="Have a &#10;powerful day!" textFill="#ce3030">
               <font>
                  <Font name="Times New Roman Bold" size="24.0" />
               </font>
            </Label>
      </children>
    </AnchorPane>
  </children>

            <MenuItem mnemonicParsing="false" text="About Us" />
          </items>
        </Menu>
      </menus>
    </MenuBar>
    <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="-1.0" prefWidth="-1.0" style="-fx-background-color: white;" VBox.vgrow="ALWAYS">
      <children>
            <ImageView fitHeight="150.0" fitWidth="200.0" layoutX="60.0" layoutY="129.0" pickOnBounds="true" preserveRatio="true">
